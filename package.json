{
  "name": "paperless.node",
  "packageManager": "yarn@3.2.1",
  "dependencies": {
    "@semantic-ui-react/css-patch": "^1.0.0",
    "@types/better-sqlite3": "^7.5.0",
    "@types/config": "^0.0.41",
    "@types/cookie-parser": "^1.4.3",
    "@types/escape-html": "^1.0.2",
    "@types/formidable": "^2.0.5",
    "@types/fs-extra": "^9.0.13",
    "@types/jsdom": "^16.2.14",
    "@types/lodash": "^4.14.182",
    "@types/md5": "^2.3.2",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^18.0.0",
    "axios": "^0.27.2",
    "better-sqlite3": "^7.5.3",
    "body-parser": "^1.20.0",
    "concurrently": "^7.2.1",
    "config": "^3.3.7",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "escape-html": "^1.0.3",
    "express": "^4.18.1",
    "formidable": "^2.0.1",
    "fs-extra": "^10.1.0",
    "googleapis": "^100.0.0",
    "jsdom": "^19.0.0",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "mime-types": "^2.1.35",
    "semantic-ui-react": "^2.1.2",
    "string-sanitizer": "^2.0.2",
    "ts-node": "^10.8.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server",
    "scripts"
  ],
  "scripts": {
    "dev": "concurrently \"yarn start\" \"cd client && HTTPS=true yarn start\"",
    "prod": "concurrently \"yarn start_prod\" \"cd client && HTTPS=true yarn start\"",
    "windows_prod": "concurrently \"yarn start_prod\" \"cd client && set HTTPS=true&&yarn start\"",
    "start": "ts-node --files server/index.ts",
    "start_prod": "ts-node --files --transpile-only server/index.ts",
    "setup_wizard": "yarn ts-node --files --transpile-only scripts/setup_wizard.ts",
    "postinstall": "semantic-ui-css-patch",
    "cleanup": "yarn ts-node --files --transpile-only scripts/cleanup.ts"
  }
}
